<Window x:Class="VkMusicPlayer.ViewModel.Login"
        x:Name="LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VkMusicPlayer.ViewModel"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Style="{StaticResource VS2012WindowStyle}"
        mc:Ignorable="d"
        Icon="/VkMusicPlayer;component/Images/VK_Logo_Small.png"
        ResizeMode="NoResize"
        Title="Авторизация" Height="195" Width="250" WindowStartupLocation="CenterScreen" >
    <Grid>
        <xctk:BusyIndicator IsBusy="{Binding IsLogging}" Visibility="{Binding BusyVisibility}" Panel.ZIndex="1" BusyContent="Авторизация..." />
        <StackPanel>
            <xctk:WatermarkTextBox Watermark="Login" Margin="10 10 10 0" Height="26" Text="{Binding Login}" />
            <xctk:WatermarkTextBox Watermark="Password" Margin="10 10 10 0" Height="26" Text="{Binding Password}"/>
            <CheckBox Content="Запомнить" Margin="10 10 0 0"/>
            <Button Margin="50 10 50 0" Content="Войти" Height="26" Command="{Binding LoginCommand, Mode=OneWay}" CommandParameter="{Binding ElementName=LoginWindow}" />
        </StackPanel>
    </Grid>
</Window>
